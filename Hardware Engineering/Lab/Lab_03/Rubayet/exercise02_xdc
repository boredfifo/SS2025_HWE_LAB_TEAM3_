set_property PACKAGE_PIN R10 [get_ports {sevenSegment_1[2]}] # A (top)
set_property IOSTANDARD LVCMOS33 [get_ports {sevenSegment_1[2]}]

set_property PACKAGE_PIN R9 [get_ports {sevenSegment_1[3]}] # F (bottom-left)
set_property IOSTANDARD LVCMOS33 [get_ports {sevenSegment_1[3]}]

set_property PACKAGE_PIN T9 [get_ports {sevenSegment_1[4]}] # E (top-left)
set_property IOSTANDARD LVCMOS33 [get_ports {sevenSegment_1[4]}]

set_property PACKAGE_PIN T8 [get_ports {sevenSegment_1[5]}] # D (bottom)
set_property IOSTANDARD LVCMOS33 [get_ports {sevenSegment_1[5]}]

set_property PACKAGE_PIN R8 [get_ports {sevenSegment_1[6]}] # C (bottom-right)
